alias desk='cd ~/Desktop'
alias down='cd ~/Downloads'
alias tmp='cd ~/Tmp'

# --- PROGRAMS ---
alias vim='/usr/local/Cellar/neovim/0.2.0_1/bin/nvim'
alias emacs='/usr/local/Cellar/emacs/25.2/bin/emacs'
