case `uname` in
  Darwin)
    if [ $(hostname) = "Felixs-MacBook-Pro.local" ]; then
      echo "==> on lab mac"
      alias ngc=$HOME/Installations/ngc
    elif [ $(hostname) = "iBeast" ]; then 
      echo "==> on home mac"
    else
      echo "==> unknown mac"
    fi
  ;;
  Linux)
    if [ $(hostname) = "felix-linux" ]; then
      echo "==> on home linux machine"
    elif [ $(hostname) = "fkreuk-linux" ]; then
      echo "==> on nv local machine"
      export DATA=/home/tlv/data
      export EXPERIMENTS=/home/tlv/experiments
    else
      echo "==> on lab cluster machine"
      alias nvim=$HOME/installations/nvim.appimage
      alias bat=$HOME/installations/bat/bat
      alias vifm=$HOME/installations/vifm/bin/vifm
      alias ts=$HOME/installations/ts/ts
      alias ack='~/installations/ack'
      PATH=$HOME/anaconda3/bin:$PATH
      PATH=$HOME/.local/bin:$PATH
      export EDITOR=$HOME/installations/nvim.appimage
      export GIT_EDITOR=$HOME/installations/nvim.appimage
      export DATA=/data/felix
      export EXPERIMENTS=/data/felix/experiments

      # >>> conda initialize >>>
      # !! Contents within this block are managed by 'conda init' !!
      __conda_setup="$('/home/mlspeech/felixk/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
      if [ $? -eq 0 ]; then
          eval "$__conda_setup"
      else
          if [ -f "/home/mlspeech/felixk/anaconda3/etc/profile.d/conda.sh" ]; then
# . "/home/mlspeech/felixk/anaconda3/etc/profile.d/conda.sh"  # commented out by conda initialize
          else
# export PATH="/home/mlspeech/felixk/anaconda3/bin:$PATH"  # commented out by conda initialize
          fi
      fi
      unset __conda_setup
      # <<< conda initialize <<<
fi
  ;;
esac

export LANG=en_US.utf8
export LC_ALL=en_US.utf8
export DOTFILES=$HOME/.dotfiles
export ZSH=$HOME/.oh-my-zsh
export PATH=$HOME/local/bin:$PATH
export PATH="/usr/local/opt/ruby/bin:$PATH"

ZSH_THEME="typewritten"
#ZSH_THEME="wedisagree"
#ZSH_THEME="gallois"

plugins=(
    zsh-autosuggestions
    git
    zsh-syntax-highlighting
    tmux
    web-search
)

source $ZSH/oh-my-zsh.sh
source $DOTFILES/aliases.zsh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
